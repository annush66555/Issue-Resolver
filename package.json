{
  "name": "twindesk",
  "version": "1.0.0",
  "description": "Real-time chat application with screen sharing and remote control",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "launcher": "node twindesk-launcher.js",
    "cli": "node src/terminal-client.js",
    "server": "node src/server-only.js",
    "desktop": "npm run start",
    "hybrid": "npm run launcher",
    "build:win": "electron-builder --win",
    "build:portable": "electron-builder --win portable",
    "build:installer": "electron-builder --win nsis",
    "build:all": "electron-builder --win --mac --linux",
    "build:dir": "electron-builder --dir",
    "build:win-all": "electron-builder --win --x64 --ia32",
    "build:mac-all": "electron-builder --mac --x64 --arm64",
    "build:linux-all": "electron-builder --linux --x64 --arm64",
    "build:win-portable": "electron-builder --win portable --x64 --ia32",
    "build:win-installer": "electron-builder --win nsis --x64 --ia32",
    "build:mac-dmg": "electron-builder --mac dmg --x64 --arm64",
    "build:linux-appimage": "electron-builder --linux AppImage --x64 --arm64",
    "build:linux-deb": "electron-builder --linux deb --x64 --arm64",
    "build:linux-rpm": "electron-builder --linux rpm --x64 --arm64",
    "deploy:all": "npm run build:all && npm run create-release-notes",
    "deploy:win": "npm run build:win-all && echo Windows builds completed",
    "deploy:mac": "npm run build:mac-all && echo macOS builds completed",
    "deploy:linux": "npm run build:linux-all && echo Linux builds completed",
    "create-release-notes": "node scripts/create-release-notes.js",
    "postinstall": "electron-builder install-app-deps",
    "package": "electron-packager . TwinDesk --platform=win32 --arch=x64 --out=dist --overwrite",
    "package:all": "electron-packager . TwinDesk --all --out=dist --overwrite"
  },
  "bin": {
    "twindesk": "./twindesk-launcher.js",
    "twindesk-cli": "./src/terminal-client.js",
    "twindesk-server": "./src/server-only.js"
  },
  "keywords": [
    "electron",
    "chat",
    "screen-sharing",
    "webrtc",
    "real-time"
  ],
  "author": "TwinDesk Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.5.0",
    "express": "^4.18.2",
    "figlet": "^1.9.3",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.twindesk.app",
    "productName": "TwinDesk",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "twindesk-launcher.js",
      "README-DUAL-MODE.md",
      "node_modules/**/*",
      "!node_modules/.cache"
    ],
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "zip",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "sign": null,
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.png",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "category": "Network",
      "synopsis": "Real-time chat and screen sharing application",
      "description": "TwinDesk is a powerful desktop application for real-time communication, screen sharing, and remote control capabilities."
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TwinDesk",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "installerIcon": "assets/icon.png",
      "uninstallerIcon": "assets/icon.png"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "artifactName": "${productName}-${version}.${ext}",
      "background": "assets/dmg-background.png",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ]
    }
  }
}
